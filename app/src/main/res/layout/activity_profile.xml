<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.example.administrator.training3c_27112017.screen.profile.ProfileViewModel"
            />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        tools:context="com.example.administrator.training3c_27112017.screen.profile.ProfileActivity"
        >

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profilePictureView"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_centerHorizontal="true"
            setSrc="@{viewModel.userFb.id}"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/nameUserTextView"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_below="@+id/profilePictureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            android:padding="@dimen/dp_10"
            android:text="@{viewModel.userFb.name}"
            />

    </RelativeLayout>
</layout>
