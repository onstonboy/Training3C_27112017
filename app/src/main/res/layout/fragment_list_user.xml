<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    tools:context="com.example.administrator.training3c_27112017.ListUserFragment"
    >

    <TextView
        android:id="@+id/listUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_user"
        android:textSize="@dimen/sp_40"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/idEditText"
        android:layout_below="@+id/listUserTextView"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"

        />
    <EditText
        android:id="@+id/nameEditText"
        android:layout_toRightOf="@+id/idEditText"
        android:layout_below="@+id/listUserTextView"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/insertUserButton"
        android:layout_toRightOf="@+id/nameEditText"
        android:layout_alignBottom="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listUserRecyclerView"
        android:layout_below="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        />

    <Button
        android:id="@+id/verticalButton"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/listUserRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vertical"/>
    <Button
        android:id="@+id/horizontalButton"
        android:layout_toRightOf="@+id/verticalButton"
        android:layout_alignBottom="@+id/verticalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/horizontal"/>
    <Button
        android:id="@+id/gridButton"
        android:layout_toRightOf="@+id/horizontalButton"
        android:layout_alignBottom="@+id/horizontalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grid"/>


</RelativeLayout>
